{
	"manifest_version": 2,
	"name": "DouyuRoom",
	"description": "斗鱼房间的一些优化",
	"version": "1.0.0",
	"icons":{
		"16":"ico/icon.png",	
		"48":"ico/icon.png"		//扩展程序管理里面的图标
	},
	"content_scripts":[{
		"js": [
			"js/BaseJs/jquery.min.js",
			"js/BaseJs/RoomObj.js",
			"js/BaseJs/onmessage.js",
			"js/removeRoom.js",
			"js/paizidanmu.js",
			"js/removeAds.js",
			"js/treasureBox.js"
		],	//要注入的js
		"matches": ["https://www.douyu.com/*","http://www.douyu.com/*"],	//满足这里的页面方能注入js
		// "run_at": "document_start",
		"all_frames":true
	}],
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"tabs",
		"*://*/*",
		"<all_urls>"
	],
	"background": {
		"scripts": ["js/BaseJs/background.js"]
	},
	"browser_action": {
		"default_icon": "ico/icon.png",//扩展在浏览器右上图标
		"default_popup": "popup.html"
	},
	"options_page": "options.html",
	"web_accessible_resources":[
		"js/RedirectJs/mod-all1.js",
		"js/content_scripts.js"
	]
}